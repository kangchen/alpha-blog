
<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li style="color:red"><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @article do |a| %>
  <p>
    <%= a.label :title %> <br>
    <%= a.text_field :title %>
  </p>
  <p>
    <%= a.label :description %> <br>
    <%= a.text_area :description %>
  </p>
  <p>
    <%= a.submit %> <br>
  </p>

<% end %>
<%= link_to "Back to articles listing", articles_path %>
