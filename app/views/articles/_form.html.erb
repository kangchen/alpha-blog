
<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li style="color:red"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |a| %>
  <p>
    <%= a.label :title %> <br>
    <%= a.text_field :title %>
  </p>
  <p>
    <%= a.label :description %> <br>
    <%= a.text_area :description %>
  </p>
    <%= a.submit "Submit", :class => 'form-button' %>
<% end %>
<br>
<%= button_to 'Cancel', articles_path, :method => :get, :class => 'form-button' %>
