<%= render 'shared/errors', obj: @article %>

<div>

  <%= form_for @article do |a| %>
  <br>

  <p class="col-sm-10">
    <%= a.label :title, class: "label" %>
    <br>
    <%= a.text_field :title, size: "66", autofocus: true %>
  </p>
  <p class="col-sm-12">
    <%= a.label :description, class: "label" %>
    <br>
    <%= a.text_area :description, size: "65x7" %>
  </p>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= a.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox", :style => "margin: 10px") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div>

  <div align="center">
    <div class="form-container">

      <% if logged_in? %>
        <div class="form-b1"><%= button_to @action, articles_path, :method => 'post', class: 'btn btn-primary btn-md', disabled: false %>
        </div>
      <% else %>
        <div class="form-b1"><%= button_to @action, articles_path, :method => 'post', class: 'btn btn-primary btn-md', disabled: true %>
        </div>
      <% end %>

      <div class="form-b1"><%= button_to 'Cancel', articles_path, :method => :get, title: 'Cancel and returning to the Listing Articles', class: 'btn btn-primary btn-md' %>
      </div>
    </div>
  </div>
<% end %>

</div>

<!-- Modal -->
