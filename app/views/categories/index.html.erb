<% content_for(:title, "Categories List") %>
<hr>
<h3 align="center" class="header">
  LISTING ALL CATEGORIES
</h3>
<hr>

<div class="container center">
  <br><br><br>
  <div class="row">

    <% @categories.each do |category| %>
