<div align="center" class="">
<h3>Profile</h3>
</div>
<div class="">
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">
  <div class="control-label col-sm-2 form-format">
    <%= f.label :username %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field  :username, :value => current_user.username, class: "form-control", size: 80, autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2 form-format">
    <%= f.label :email %>
  </div>
  <div class="col-sm-8">
    <%= f.email_field :email, :value => current_user.email, class: 'form-control', placeholder: "Enter email" %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2 form-format">
    <%= f.label :password %>
  </div>
  <div class="col-sm-8">
    <%= f.password_field :password, :value => "***************", class: 'form-control', placeholder: "Enter password" %>
  </div>
</div>

<div class="form-group form-container">
  <div class="col-sm-offset-2 col-sm-10 form-b1">
    <%= f.submit 'Update', class: 'btn btn-primary btn-lg' %>
  </div>
  <div class="col-sm-offset-2 col-sm-10">
    <div class="form-b1"><%= link_to 'Cancel', articles_path, class: 'btn btn-primary btn-lg' %></div>
  </div>
</div>
<% end %>
</div>
