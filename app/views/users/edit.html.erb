<%= render 'shared/errors', obj: @user %>
<hr>
<div align="center" class="header">
  <% if @avator_image.count > 0 %>
    <h3 align="center">
      EDIT YOUR PROFILE <br>
      <a href="http://<%= IPADDRESS %>/avators/<%= @avator_image[0].id %>/edit">
        <%= get_avator_image(@user, 80) %>
      </a></h3>
  <% else %>
    <h3 align="center">
      EDIT YOUR PROFILE <br>
      <a href="http://<%= IPADDRESS %>/avators/new"><%= get_avator_image(@user, 80) %></a>
    </h3>
  <% end %>
</div>
<hr>
<div class="">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-8 form-format" align="left">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", size: 80, autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-8 form-format" align="left">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: 'form-control', placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-8 form-format" align="left">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: 'form-control', placeholder: "Enter password" %>
      </div>
    </div>

    <div class="form-group form-container">
      <div class="col-sm-offset-2 col-sm-10 form-b1">
        <%= f.submit 'Update Account', class: 'btn btn-primary btn-lg' %>
      </div>
      <div class="col-sm-offset-2 col-sm-10">
        <div class="form-b1"><%= link_to 'Cancel', articles_path, class: 'btn btn-primary btn-lg' %></div>
      </div>
    </div>
  <% end %>
</div>
