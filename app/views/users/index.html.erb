<%= render 'shared/paging', obj: @users %>

<div style="position: relative;">
  <h2 class="header">
    ALL ALPHA BLOGGERS
  </h2>
  <hr>
  <div  class="container">
    <div class="row">
      <!-- <div class="col" style="width:250px"> -->
        <% @users.each do |user| %>
          <div class="card-deck user-card">
            <div align="center" class="card">
              <div class="card-body">
                <h3 class="card-title">
                  <%= link_to user.username.upcase, user_path(user) %></h3>
                  <%= link_to gravatar_for(user), user_path(user) %>
                <hr>
                <small>
                  <%= pluralize(user.articles.count, "article") if user.articles %>
                </small>
              </div>
            </div>
          </div>
        <% end %>
      <!-- </div> -->
    </div>
  </div>
</div>
