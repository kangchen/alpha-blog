<%= render 'shared/errors', obj: @user %>

<div class="center">
  <div class="">

    <h2 class="header" style="margin:15px;text-align:left;">
      SIGNUP FOR ALPHA BLOG
    </h2>
    <br>
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2 form-format">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", size: 80, placeholder: "Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2 form-format">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: 'form-control', placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2 form-format">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: 'form-control', placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group form-container">
        <div class="col-sm-offset-2 col-sm-10 form-b1">
          <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg' %>
        </div>
        <div class="col-sm-offset-2 col-sm-10">
          <div class="form-b1"><%= link_to 'Cancel', articles_path, class: 'btn btn-primary btn-lg' %></div>
        </div>
      </div>
    <% end %>
  </div>

</div>
