<div class="container">
  <div class="row">
      <% obj.each do |user| %>
      <div class="col-md-4 col-lg-3">
        <!-- <hr> -->
        <div class="card-deck card">
          <div class="user-card">
            <div class="user-card-body">
              <h3 class="card-title">
                <br>

                <%= link_to user.username.upcase, user_path(user) %>
              </h3>

              <a href="http://<%= IPADDRESS %>/users/<%= user.id %>" style="text-decoration:none; cursor:pointer">
                <%= get_avator_image(user, 80) %>
              </a>
              <hr>
              <small>
                <%= pluralize(user.articles.count, "article") if user.articles %>
                <% if logged_in? and current_user.admin? %>  <br>
                <%= button_to "Delete this user", confirm_path(uid: user.id, name: user.username), class: "btn btn-danger", :method => :post %>
                <% end %>
              </small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
